<!DOCTYPE html>
<html lang="en">
    <%- include('../includes/head.ejs') %>
    <body>
        <%- include("../includes/nav.ejs") %> <% if(json){ %>
        <div class="container my-4 p-1">
            <%- include('../includes/current_weather.ejs') %>

            <div class="table-responsive my-4">
                <table class="table table-striped table-sm text-center my-3">
                    <thead class="thead-dark">
                        <tr>
                            <th>Date</th>
                            <th>Temperature (max, min)</th>
                            <th>Wind Speed (max)</th>
                            <th>Conditon</th>
                            <th>Sunrise</th>
                            <th>Sunset</th>
                            <th>Moonrise</th>
                            <th>Moonset</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(data of json.forecast.forecastday){ %>
                        <tr>
                            <td><%=data.date%></td>
                            <td>
                                <%=data.day.maxtemp_c%>&deg;C/<%=
                                data.day.maxtemp_f %>&deg;F,
                                <%=data.day.mintemp_c%>&deg;C/<%=
                                data.day.mintemp_f %>&deg;F
                            </td>
                            <td><%= data.day.maxwind_kph %> kph</td>
                            <td>
                                <img
                                    src="<%= data.day.condition.icon %>"
                                    alt="weather_icon"
                                /><%= data.day.condition.text %>
                            </td>
                            <td><%= data.astro.sunrise %></td>
                            <td><%= data.astro.sunset %></td>
                            <td><%= data.astro.moonrise %></td>
                            <td><%= data.astro.moonset %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
        <% }else{ %>
        <h1>no data found</h1>
        <% } %>
    </body>
</html>
